<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="#000000">

     <LinearLayout style="@style/card_option_line">
            <TextView android:background="@drawable/background_option_item" style="@style/card_option_item" android:tag="0" android:text="0" android:id="@+id/card0"/>
            <TextView android:background="@drawable/background_option_item" style="@style/card_option_item" android:tag="1" android:text="1/2" android:id="@+id/card0_5"/>
            <TextView android:background="@drawable/background_option_item" style="@style/card_option_item" android:tag="2" android:text="1" android:id="@+id/card1"/>
    </LinearLayout>
    <LinearLayout style="@style/card_option_line">
            <TextView android:background="@drawable/background_option_item" style="@style/card_option_item" android:tag="3" android:text="2" android:id="@+id/card2"/>
            <TextView android:background="@drawable/background_option_item" style="@style/card_option_item" android:tag="4" android:text="3" android:id="@+id/card3"/>
            <TextView android:background="@drawable/background_option_item" style="@style/card_option_item" android:tag="5" android:text="5" android:id="@+id/card5"/>
    </LinearLayout>
    <LinearLayout style="@style/card_option_line">
            <TextView android:background="@drawable/background_option_item" style="@style/card_option_item" android:tag="6" android:text="8" android:id="@+id/card8"/>
            <TextView android:background="@drawable/background_option_item" style="@style/card_option_item" android:tag="7" android:text="13" android:id="@+id/card13"/>
            <TextView android:background="@drawable/background_option_item" style="@style/card_option_item" android:tag="8" android:text="20" android:id="@+id/card20"/>
    </LinearLayout>
    <LinearLayout style="@style/card_option_line">
            <TextView android:background="@drawable/background_option_item" style="@style/card_option_item" android:tag="9" android:text="40" android:id="@+id/card40"/>
            <TextView android:background="@drawable/background_option_item" style="@style/card_option_item" android:tag="10" android:text="100" android:id="@+id/card100"/>
            <TextView android:background="@drawable/background_option_item" style="@style/card_option_item" android:tag="11" android:text="\?" android:id="@+id/cardq"/>
    </LinearLayout>
</LinearLayout>